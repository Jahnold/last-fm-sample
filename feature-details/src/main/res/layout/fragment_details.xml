<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:background="@color/white"
>

    <ProgressBar
            android:id="@+id/details_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center"
    />

    <LinearLayout
            android:id="@+id/details_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
    >

        <ImageView
                android:id="@+id/details_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/details_name"
                android:textStyle="bold"
                android:padding="8dp"
        />

        <TextView
                android:id="@+id/details_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/details_artist"
                android:textStyle="bold"
                android:padding="8dp"
        />

        <TextView
                android:id="@+id/details_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/details_published"
                android:textStyle="bold"
                android:padding="8dp"
        />

        <TextView
                android:id="@+id/details_published"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/details_summary"
                android:textStyle="bold"
                android:padding="8dp"
        />

        <TextView
                android:id="@+id/details_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
        />

    </LinearLayout>

    <TextView
            android:id="@+id/details_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/details_error"
            android:visibility="gone"
    />

</FrameLayout>